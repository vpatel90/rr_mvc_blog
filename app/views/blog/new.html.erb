<main class="main1" id="new">
  <h2>Create a new Post</h2>
  <% if @error == "true" %>
  <h3>Your post could not be saved. Please try again</h3>
  <% end %>

  <form action='/posts' method="post" accept-charset="utf-8" id='new-post'>
    <div><label for='title'>Title:     </label>
    <input class="field" type='text' name='title' id='title'/></div>
    <div><label for='author'>Name:</label>
    <input class="field" type='text' name='author' id='author'/></div>
    <label for='body'>Post</label>
    <textarea name='body' id='body'></textarea>

    <input type='submit' name='commit' id='create_post'  />
  </form>
</main>
